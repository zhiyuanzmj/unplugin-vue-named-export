{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vue/macros-global"
    ]
  },
  "vueCompilerOptions": {
    "plugins": [
      "./dist/volar.js"
    ]
  },
  "include": [
    "src",
    "tests"
  ]
}