{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node", "@vue-macros/reactivity-transform/macros-global"],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "plugins": ["./dist/volar.cjs"]
  },
  "include": ["src", "tests"]
}
